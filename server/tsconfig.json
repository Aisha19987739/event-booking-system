{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
       "types": ["jest", "node"],
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src"]
}

